<BorderPane id="BorderPane" prefHeight="345.0" prefWidth="537.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1">
  <bottom>
    <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="580.0">
      <children>
        <Button fx:id="btnPasswordGenerator" focusTraversable="false" maxHeight="-Infinity" maxWidth="-Infinity" mnemonicParsing="false" prefHeight="30.0" prefWidth="152.0" text="Password Generator" textFill="WHITE">
          <font>
            <Font size="13.0" fx:id="x1" />
          </font>
          <HBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" fx:id="x2" />
          </HBox.margin>
        </Button>
        <Button fx:id="btnAddAccount" focusTraversable="false" font="$x1" maxHeight="-Infinity" maxWidth="-Infinity" mnemonicParsing="false" prefHeight="30.0" prefWidth="150.0" text="Add Account" textFill="WHITE" HBox.margin="$x2" />
        <Button focusTraversable="false" font="$x1" maxHeight="-Infinity" maxWidth="-Infinity" mnemonicParsing="false" prefHeight="30.0" prefWidth="151.0" text="Cancel" textFill="WHITE" HBox.margin="$x2" />
      </children>
    </HBox>
  </bottom>
  <center>
    <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0">
      <children>
        <VBox alignment="TOP_RIGHT" prefHeight="226.0" prefWidth="256.0">
          <children>
            <TextField fx:id="tfAccountName" focusTraversable="false" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="40.0" prefWidth="250.0" promptText="Account Name">
              <VBox.margin>
                <Insets bottom="5.0" left="10.0" right="10.0" top="20.0" fx:id="x4" />
              </VBox.margin>
            </TextField>
            <TextField fx:id="tfAccountUserID" focusTraversable="false" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="40.0" prefWidth="250.0" promptText="User ID">
              <VBox.margin>
                <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" fx:id="x3" />
              </VBox.margin>
            </TextField>
            <PasswordField fx:id="tfAccountPassword" focusTraversable="false" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="40.0" prefWidth="250.0" promptText="Password" VBox.margin="$x3" />
          </children>
        </VBox>
        <VBox alignment="TOP_LEFT" prefHeight="226.0" prefWidth="256.0">
          <children>
            <TextArea fx:id="taAccountNotes" focusTraversable="false" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="142.0" prefWidth="236.0" promptText="Account Notes" wrapText="true">
                     <VBox.margin>
                        <Insets bottom="5.0" left="10.0" right="10.0" top="20.0" />
                     </VBox.margin></TextArea>
          </children>
        </VBox>
      </children>
    </HBox>
  </center>
  <top>
    <VBox alignment="BOTTOM_CENTER">
      <children>
        <Label fx:id="lblAddAccount" text="Add Account" textFill="GREY">
          <font>
            <Font name="SansSerif Regular" size="25.0" />
          </font>
          <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="30.0" />
          </VBox.margin>
        </Label>
        <Separator maxWidth="-Infinity" prefHeight="0.0" prefWidth="509.0" style=".separator*.line {&#10;-fx-border-style: solid;&#10;-fx-background-color: #D3D3D3;&#10;}" />
      </children>
    </VBox>
  </top>
    
